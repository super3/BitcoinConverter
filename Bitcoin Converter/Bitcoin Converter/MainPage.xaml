<Page
    x:Class="Bitcoin_Converter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bitcoin_Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBox x:Name="btcBox" TextWrapping="Wrap" Text="1" FontSize="48" TextAlignment="Center" MinWidth="150" TextChanged="btcBox_TextChanged" Width="300"/>
			<TextBlock TextWrapping="Wrap" Text="BTC" FontSize="48" TextAlignment="Center" Margin="20,5,20,0" Padding="0,10"/>
			<TextBlock TextWrapping="Wrap" Text="=" FontSize="48" TextAlignment="Center" Margin="0,5,20,0" Padding="0,10"/>
			<TextBox x:Name="usdBox" TextWrapping="Wrap" Text="11.07" FontSize="48" TextAlignment="Center" MinWidth="150" TextChanged="usdBox_TextChanged" DoubleTapped="usdBox_DoubleTapped" Width="300"/>
			<TextBlock TextWrapping="Wrap" Text="USD" FontSize="48" TextAlignment="Center" Margin="20,5,20,0" Padding="0,10"/>
		</StackPanel>
    </Grid>
</Page>